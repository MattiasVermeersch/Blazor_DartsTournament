<br />
<div class="inline-div">
    <table class="table table-striped table-bordered floatLeft">
        <thead>
            <tr>
                <th>Players</th>
            </tr>
        </thead>
        <tbody>
                @if(PlayerList == null)
                {
                    <tr>
                        <td>There are no players listed in this tournament.</td>
                    </tr>
                }
                else
                {
                    foreach(var player in PlayerList)
                    {
                        <tr>
                            <td>@player.Name</td>
                        </tr>
                    }
                }
            <tr>
                <td><center><button class=button-link @onclick="OnAddClick">Add players</button></center></td>
            </tr>
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public IEnumerable<Player> PlayerList { get; set; }

    [Parameter]
    public EventCallback OnAddClick { get; set; }
}
