<div class="row">
    @foreach(var leg in LegsList)
    {
        Counter++;
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-gradient-card">
                    <center>Match @Counter</center>
                </div>
                <div class="card-body">
                    <div class="container-fluid">
                        
                        <div class="row">
                            @foreach(var playerGame in leg.PlayerLegs)
                            {
                                <div class="col-md-6 mb-6">
                                    <center>@playerGame.Player.Name</center>
                                </div>
                            }
                        </div>
                        <div><center>vs.</center></div>
                        <div class="row">
                            <div class="col">
                               <center>@leg.ScorePlayer1</center>
                            </div>
                            <div class="col">
                                <center>@leg.ScorePlayer2</center>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="d-grid gap-2 col-6 mx-auto">
                        @if (leg.IsActive)
                        {
                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="(e => OnContinueMatchClick.InvokeAsync(leg))"><span class="oi oi-media-play"> Continue</span></button>
                            <button type="button" class="btn btn-outline-info btn-sm"><span class="oi oi-eye"> Kijken</span></button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="(e => OnStartMatchClick.InvokeAsync(leg))"><span class="oi oi-media-play"> Start match</span></button>
                            <button type="button" class="btn disabled btn-sm"><span class="oi oi-eye"> Kijken</span></button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public IEnumerable<Leg> LegsList { get; set; }

    [Parameter]
    public EventCallback<Leg> OnStartMatchClick { get; set; }

    [Parameter]
    public EventCallback<Leg> OnContinueMatchClick { get; set; }

    [Parameter]
    public int Counter { get; set; }
}
