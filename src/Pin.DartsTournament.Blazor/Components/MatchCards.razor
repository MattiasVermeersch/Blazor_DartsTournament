<div class="row">
    @foreach(var leg in LegsList)
    {
        counter++;
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <center>Match @counter</center>
                </div>
                <div class="card-body">
                    <div class="container-fluid">
                        
                        <div class="row">
                            @foreach(var playerGame in leg.PlayerLegs)
                            {
                                <div class="col-md-6 mb-6">
                                    <center>@playerGame.Player.Name</center>
                                </div>
                            }
                        </div>
                        <div><center>vs.</center></div>
                        <div class="row">
                            <div class="col">
                               <center>@leg.ScorePlayer1</center>
                            </div>
                            <div class="col">
                                <center>@leg.ScorePlayer2</center>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="d-grid gap-2 col-6 mx-auto">
                        @if (leg.IsActive)
                        {
                            <button type="button" class="btn btn-outline-primary btn-sm"><span class="oi oi-media-play"> Continue</span></button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-primary btn-sm"><span class="oi oi-media-play"> Start match</span></button>
                        }
                        
                        <button type="button" class="btn btn-outline-info btn-sm"><span class="oi oi-eye"> Kijken</span></button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public IEnumerable<Leg> LegsList { get; set; }

    private int counter = 0;
}
